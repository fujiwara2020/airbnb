
<h3>ルーム予約</h3>

¥<%= @room.fee %>/日</br>
<%= @room.room_name %></br>

    <% if @room.room_image? %>
        <%= image_tag @room.room_image.url %>
    <% else %>
        <%= image_tag "no-image.png" %>
    <% end %></br>
    
<%= @room.room_introduction %></br>

<%= form_for [@room, @booking] do |f| %>
    
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    
    <%= f.label :start_date, "開始日" %>
    <%= f.date_field :start_date %></br>
    
    <%= f.label :end_date, "終了日" %>
    <%= f.date_field :end_date %></br>
    
    <%= f.label :people, "人数" %>
    <%= f.number_field :people %></br>

    <%= f.submit "予約" %>


<% end %>
